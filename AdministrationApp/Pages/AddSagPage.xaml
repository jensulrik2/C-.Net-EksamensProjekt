<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdministrationApp.AddSagPage">

    <StackLayout Padding="20">
        <Label Text="Add New Sag" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="SagOverskriftEntry" Placeholder="Overskrift" />
        <Entry x:Name="SagBeskrivelseEntry" Placeholder="Beskrivelse" />
        <Label x:Name="AfdelingLabel" />

        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>